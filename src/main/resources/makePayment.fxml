<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="864.0" prefWidth="1536.0" stylesheets="@dashboard.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controllers.MakePaymentController">
    <children>
        <Label prefHeight="80.0" prefWidth="1588.0" styleClass="header-label" text="mVaahan Portal">
            <font>
                <Font size="24.0" />
            </font>
        </Label>
        <fx:include source="Sidebar.fxml" />
        <fx:include fx:id="sidebarPane" source="Sidebar.fxml" />
        <AnchorPane fx:id="dashboardPane" layoutX="220.0" layoutY="80.0" prefHeight="784.0" prefWidth="1366.0" styleClass="anchor-pane" stylesheets="@dashboard.css">
            <children>
                <VBox alignment="TOP_CENTER" layoutX="58.0" layoutY="103.0" prefHeight="511.0" prefWidth="1250.0" spacing="20.0">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="20.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label prefHeight="112.0" prefWidth="250.0" text="Payment Reason">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <ChoiceBox fx:id="paymentReasonChoiceBox" prefHeight="40.0" prefWidth="953.0" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="20.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label prefHeight="112.0" prefWidth="250.0" text="Reference ID">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="referenceIdField" prefHeight="40.0" prefWidth="953.0" promptText="Enter Reference Id Here" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="20.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label prefHeight="112.0" prefWidth="250.0" text="Amount">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <TextField fx:id="amountField" prefHeight="40.0" prefWidth="953.0" promptText="Enter Amount Here" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER_LEFT" spacing="20.0" VBox.vgrow="ALWAYS">
                            <children>
                                <Label prefHeight="112.0" prefWidth="250.0" text="Payment Mode">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <ChoiceBox fx:id="setPaymentModeChoiceBox" prefHeight="40.0" prefWidth="953.0" />
                            </children>
                        </HBox>
                    </children>
                    <padding>
                        <Insets top="40.0" />
                    </padding>
                </VBox>
                <Label alignment="CENTER" contentDisplay="CENTER" layoutY="1.0" prefHeight="101.0" prefWidth="1367.0" styleClass="dashboard-title" text="Payment Process" />
                <Button fx:id="proccessPaymentButton" layoutX="565.0" layoutY="647.0" mnemonicParsing="false" onAction="#makePayment" prefHeight="80.0" prefWidth="253.0" styleClass="header-label" text="Make Payment" />
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
